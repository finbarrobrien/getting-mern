extends layout

block content
  .row.page-header
    .col-lg-12
      h1="Review "+location.name
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="reviewer") Name
          .col-xs-12.col-sm-10
            input#reviewer.form-control(name="reviewer")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="stars") Rating
          .col-xs-12.col-sm-2
            select#stars.form-control.input-sm(name="stars")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-sm-2.control-label(for="comment") Review
          .col-sm-10
            textarea#comment.form-control(name="comment", rows="5")
        button.btn.btn-default.pull-right Add my review
    .col-xs-12.col-md-4
